<div class="container wrapper">
    <h1>Admin</h1>
    <hr> {{#if isAdmin}}
    <div class="users">
        <h2>Users</h2>
        <table>
            <tr>
                <th>Email</th>
                <th>Username</th>
                <th>Role</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
            {{#each users}}
            <tr>
                <td>{{this.email}}</td>
                <td>{{this.username}}</td>
                <td>{{this.role}}</td>
                <td>
                    <a href="/admin/edit_user/{{this._id}}" class="btn-edit-user">
                        <i class="glyphicon glyphicon-pencil"></i>
                    </a>
                </td>
                <td>
                    <a href="#" class="btn-delete-user" rel="{{this._id}}">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>
    {{/if}}
    <hr>
    <div class="assets">
        <h2>Assets</h2>
        <table>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Filename</th>
                <th>File Type</th>
                <th>Username</th>
                <th>Delete</th>
            </tr>
            {{#each assets}}
            <tr>
                <td>{{this.name}}</td>
                <td>{{this.description}}</td>
                <td>{{this.filename}}</td>
                <td>{{this.type}}</td>
                <td>{{this.user}}</td>
                <td>
                    <a href="#" class="btn-delete-asset" rel="{{this._id}}">
                        <i class="glyphicon glyphicon-remove"></i>
                    </a>
                </td>
            </tr>
            {{/each}}
        </table>
    </div>

    <hr>

    <a href="/admin/add_asset">Add New Asset</a>

</div>


<div id="deleteModal" class="modal fade" role='dialog'>
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
                <h4 class="modal-title">Delete </h4>
            </div>
            <div class="modal-body">
                <p>Do You Really Want to Delete This ?</p>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-confirm-delete" data-dismiss="modal">Confirm</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>

        </div>
    </div>
</div>

<script src="/js/admin.js"></script>