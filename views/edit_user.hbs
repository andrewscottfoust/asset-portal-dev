<div class="container_edit_user">
    <a href="/admin">Back</a>
    <h1>Edit User Info</h1>
    <form id="register_form">
        <div>
            <input type="text" id="username" name="username" placeholder="Pick a username" value="{{user.username}}">
        </div>
        <div>
            <input type="text" id="firstname" name="firstname" placeholder="Your Firstname" value="{{user.firstname}}">
        </div>
        <div>
            <input type="text" id="lastname" name="lastname" placeholder="Your Lastname" value="{{user.lastname}}">
        </div>
        <div>
            <input type="text" id="email" name="email" placeholder="youremail@email.com" value="{{user.email}}">
        </div>
        <div>
            <input type="password" id="password" name="password" placeholder="Enter password" value="{{user.password}}">
        </div>
        <div>
            <input type="password" id="password_confirm" name="password_confirm" placeholder="Re-Enter password" value="{{user.password}}">
        </div>
        <button type="submit">Update</button>
    </form>
</div>
<script src="/js/edit_user.js"></script>